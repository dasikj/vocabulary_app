<div class="max-w-2xl mx-auto mt-10">
  <div class="rounded-2xl bg-white text-gray-900 shadow p-6 space-y-6">
    <h1 class="text-xl font-semibold"><%= t(".title") %></h1>
    <%# 共通エラーメッセージ%>
    <%= render "shared/error_messages", object: @vocabulary %>
    <%# 語彙登録フォーム%>
    <%= form_with model: @vocabulary, url: vocabularies_path, local: true do |f| %>
      <div>
        <%= f.label :word, class: "block text-sm mb-1" %>
        <%= f.text_field :word, class: "w-full rounded-xl border px-3 py-2" %>
      </div>

      <div>
        <%= f.label :reading, class: "block text-sm mb-1" %>
        <%= f.text_field :reading, class: "w-full rounded-xl border px-3 py-2" %>
      </div>

      <div>
        <%= f.label :meaning, class: "block text-sm mb-1" %>
        <%= f.text_area :meaning, rows: 3, class: "w-full rounded-xl border px-3 py-2" %>
      </div>

      <div>
        <%= f.label :example, class: "block text-sm mb-1" %>
        <%= f.text_area :example, rows: 3, class: "w-full rounded-xl border px-3 py-2" %>
      </div>

      <div>
        <%= f.label :part_of_speech, class: "block text-sm mb-1" %>
        <%= f.select :part_of_speech,
              Vocabulary.part_of_speeches.keys.map { |k| [I18n.t("enums.vocabulary.part_of_speech.#{k}"), k] },
              {}, class: "w-full rounded-xl border px-3 py-2" %>
      </div>

      <%# タグ（モーダル選択方式） %>
      <div class="pt-3">
        <% tags = VocabularyTag.where(user: current_user).order(:name) %>
        <% selected_ids = Array(@vocabulary.vocabulary_tag_ids).map(&:to_s) %>

        <label class="block text-sm mb-1"><%= t("common.tag") %></label>
        <button type="button"
                onclick="document.getElementById('vocabularyTagPickerNew').showModal()"
                class="rounded-xl border px-3 py-2 w-full text-left hover:bg-gray-100">
          <%= t("common.new_choice_tag") %>
        </button>

        <% tags = VocabularyTag.where(user: current_user).order(:name) %>
        <% selected_ids = Array(@vocabulary.vocabulary_tag_ids).map(&:to_s) %>
        <%# 選択済みを先頭へ %>
        <% sorted_tags = tags.sort_by { |t| selected_ids.include?(t.id.to_s) ? 0 : 1 } %>

        <%= render "shared/tag_picker",
                id: "vocabularyTagPickerNew",
                field_name: "vocabulary[vocabulary_tag_ids][]",
                tags: sorted_tags,
                selected_ids: selected_ids,
                title: t("common.new_choice_tag") %>
      </div>

      <%# 作成ボタン %>
      <div class="pt-2">
        <%= f.submit t("common.submit"), class: "w-full rounded-xl bg-green-600 text-white py-2 hover:bg-green-700 hover:shadow-lg
              active:translate-y-0.5
              transition duration-150" %>
      </div>
    <% end %>
  </div>
  <%= link_to t("common.return"), top_path, class: "ml-2 underline" %>
</div>
