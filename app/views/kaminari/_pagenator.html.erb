<nav class="mt-6 flex items-center justify-center gap-2" role="navigation" aria-label="pagination">
  <%= first_page_tag %>
  <%= prev_page_tag %>

  <% each_page do |page| %>
    <% if page.left_outer? || page.right_outer? || page.inside_window? %>
      <%= page_tag page %>
    <% elsif !page.was_truncated? %>
      <%= gap_tag %>
    <% end %>
  <% end %>

  <%= next_page_tag %>
  <%= last_page_tag %>
</nav>
