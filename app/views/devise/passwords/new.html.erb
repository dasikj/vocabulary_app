<div class="min-h-screen flex items-center justify-center py-10">
  <div class="w-full max-w-md bg-white shadow rounded-lg p-6">
    <h1 class="text-2xl font-semibold mb-3 text-center"><%= t("passwords.new.title", default: t("devise.passwords.new.title", default: "パスワード再設定")) %></h1>
    <p class="text-sm text-gray-600 mb-6 text-center"><%= t("passwords.new.description", default: "登録メールアドレスを入力してください。再設定用のリンクをお送りします。") %></p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
      <% if resource.errors.any? %>
        <div class="mb-4 text-sm text-red-700">
          <ul class="list-disc pl-5">
            <% resource.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :email, t("passwords.new.email_label", default: t("placeholders.email")), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t("placeholders.email"), class: "block w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-1 focus:ring-gray-400" %>
      </div>

      <div class="mb-6">
        <%= f.submit t("devise.passwords.new.submit", default: t("passwords.new.submit", default: "再設定メールを送信")), class: "w-full inline-flex justify-center items-center rounded-md px-4 py-2 border border-transparent bg-blue-600 text-white text-sm font-medium hover:bg-blue-700 focus:outline-none" %>
      </div>
    <% end %>

    <div class="text-sm flex flex-col items-center space-y-2">
      <%= link_to t("passwords.new.link_to_signin", default: "ログインページへ"), new_user_session_path, class: "text-blue-700 hover:underline" %>
      <%= link_to t("passwords.new.link_to_signup", default: "新規登録へ"), new_user_registration_path, class: "text-blue-700 hover:underline" %>
    </div>
  </div>
</div>
