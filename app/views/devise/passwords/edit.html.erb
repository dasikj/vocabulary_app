<div class="min-h-screen flex items-center justify-center py-10">
  <div class="w-full max-w-md bg-white shadow rounded-lg p-6">
    <h1 class="text-2xl font-semibold mb-3 text-center"><%= t("passwords.edit.title", default: t("devise.passwords.edit.title", default: "新しいパスワードを設定")) %></h1>
    <p class="text-sm text-gray-600 mb-6 text-center"><%= t("passwords.edit.description", default: "新しいパスワードを入力してください。") %></p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <% if resource.errors.any? %>
        <div class="mb-4 text-sm text-red-700">
          <ul class="list-disc pl-5">
            <% resource.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.hidden_field :reset_password_token %>

      <div class="mb-4">
        <%= f.label :password, t("passwords.edit.new_password_label", default: t("placeholders.password")), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: t("placeholders.password"), class: "block w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-1 focus:ring-gray-400" %>
        <% if @minimum_password_length %>
          <p class="mt-1 text-xs text-gray-500"><%= t("devise.shared.minimum_password_length", count: @minimum_password_length, default: "最低#{@minimum_password_length}文字") %></p>
        <% end %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, t("passwords.edit.new_password_confirmation_label", default: t("placeholders.password_confirmation")), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: t("placeholders.password_confirmation"), class: "block w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-1 focus:ring-gray-400" %>
      </div>

      <div class="mb-6">
        <%= f.submit t("passwords.edit.submit", default: "パスワードを変更"), class: "w-full inline-flex justify-center items-center rounded-md px-4 py-2 border border-transparent bg-blue-600 text-white text-sm font-medium hover:bg-blue-700 focus:outline-none" %>
      </div>
    <% end %>

    <div class="text-sm flex flex-col items-center space-y-2">
      <%= link_to t("passwords.edit.link_to_signin", default: "ログインページへ"), new_user_session_path, class: "text-blue-700 hover:underline" %>
    </div>
  </div>
</div>
