<div class="min-h-screen flex items-center justify-center py-10">
  <div class="w-full max-w-md bg-white shadow rounded-lg p-6">
    <h1 class="text-2xl font-semibold mb-6 text-center"><%= t("sessions.new.title") %></h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, t("sessions.new.email_label", default: t("placeholders.email")), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t("placeholders.email"), class: "block w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-1 focus:ring-gray-400" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, t("sessions.new.password_label", default: t("placeholders.password")), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: t("placeholders.password"), class: "block w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-1 focus:ring-gray-400" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300" %>
          <%= f.label :remember_me, t("sessions.new.remember_me"), class: "ml-2 text-sm text-gray-700" %>
        </div>
      <% end %>

      <div class="mb-6">
        <%= f.submit t("helpers.submit.user.sign_in", default: t("sessions.new.submit")), class: "w-full inline-flex justify-center items-center rounded-md px-4 py-2 border border-transparent bg-blue-600 text-white text-sm font-medium hover:bg-blue-700 focus:outline-none" %>
      </div>
    <% end %>

    <div class="text-sm flex flex-col items-center space-y-2">
      <%= link_to t("sessions.new.forgot_password"), new_user_password_path, class: "text-blue-700 hover:underline" %>
      <%= link_to t("sessions.new.link_to_signup"), new_user_registration_path, class: "text-blue-700 hover:underline" %>
    </div>
  </div>
</div>
