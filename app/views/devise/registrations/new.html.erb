
<div class="min-h-screen flex items-center justify-center py-10">
  <div class="w-full max-w-md bg-white shadow rounded-lg p-6">
    <h1 class="text-2xl font-semibold mb-6 text-center"><%= t("devise.registrations.new.title", default: t("registrations.new.title", default: "新規登録")) %></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% if resource.errors.any? %>
        <div class="mb-4 text-sm text-red-700">
          <ul class="list-disc pl-5">
            <% resource.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :name, t("devise.registrations.new.name_label", default: t("placeholders.name")), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, autofocus: true, placeholder: t("placeholders.name"), class: "block w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-1 focus:ring-gray-400" %>
      </div>

      <div class="mb-4">
        <%= f.label :email, t("devise.registrations.new.email_label", default: t("placeholders.email")), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autocomplete: "email", placeholder: t("placeholders.email"), class: "block w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-1 focus:ring-gray-400" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, t("devise.registrations.new.password_label", default: t("placeholders.password")), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: t("placeholders.password"), class: "block w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-1 focus:ring-gray-400" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, t("devise.registrations.new.password_confirmation_label", default: t("placeholders.password_confirmation")), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: t("placeholders.password_confirmation"), class: "block w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-1 focus:ring-gray-400" %>
      </div>

      <div class="mb-6">
        <%= f.submit t("helpers.submit.user.sign_up", default: t("devise.registrations.new.submit")), class: "w-full inline-flex justify-center items-center rounded-md px-4 py-2 border border-transparent bg-blue-700 text-white text-sm font-medium hover:bg-blue-600 focus:outline-none" %>
      </div>
    <% end %>

    <div class="text-sm flex flex-col items-center space-y-2">
      <%= link_to t("devise.registrations.new.link_to_signin", default: t("users.new.return_login")), new_user_session_path, class: "text-blue-700 hover:underline" %>
    </div>
  </div>
</div>
