<% content_for :title, full_title(t(".title")) %>
<div class="max-w-md mx-auto mt-10">
  <div class="rounded-2xl bg-white text-gray-900 shadow p-6 space-y-5">
    <h1 class="text-xl font-semibold"><%= t(".title") %></h1>

    <% if @user&.errors&.any? %>
      <ul class="text-sm text-red-600 list-disc pl-5">
        <% @user.errors.full_messages.each do |msg| %><li><%= msg %></li><% end %>
      </ul>
    <% end %>

    <%= form_with model: @user, url: users_path, method: :post do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :email, t(".email"), class: "block text-sm mb-1" %>
          <%= f.email_field :email, placeholder: t("placeholders.email"),
                class: "w-full rounded-xl border px-3 py-2" %>
        </div>

        <div>
          <%= f.label :name, t(".name"), class: "block text-sm mb-1" %>
          <%= f.text_field :name, placeholder: t("placeholders.name"),
                class: "w-full rounded-xl border px-3 py-2" %>
        </div>

        <div>
          <%= f.label :password, t(".password"), class: "block text-sm mb-1" %>
          <%= f.password_field :password, placeholder: t("placeholders.password"),
                class: "w-full rounded-xl border px-3 py-2" %>
        </div>

        <div>
          <%= f.label :password_confirmation, t(".password_confirmation"), class: "block text-sm mb-1" %>
          <%= f.password_field :password_confirmation, placeholder: t("placeholders.password_confirmation"),
                class: "w-full rounded-xl border px-3 py-2" %>
        </div>

        <div class="pt-2">
          <%= f.submit "作成", class: "w-full rounded-xl bg-blue-600 text-white py-2" %>
        </div>
      </div>
    <% end %>

    <div class="text-center">
      <%= link_to t(".return_login"), new_session_path, class: "text-blue-600 hover:underline" %>
    </div>
  </div>
</div>
