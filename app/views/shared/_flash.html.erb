<% if flash[:notice] %>
  <div class="mb-4 rounded-xl bg-green-50 text-green-800 border border-green-200 p-4">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="mb-4 rounded-xl bg-red-50 text-red-800 border border-red-200 p-4">
    <%= flash[:alert] %>
  </div>
<% end %>
