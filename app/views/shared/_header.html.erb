<header class="sticky top-0 z-50 shadow mb-4" style="background-color:#A8C0B0;">
  <div class="container mx-auto flex justify-between items-center py-3 px-4">
    <nav class="flex space-x-4">
      <%= link_to "TOP", top_path, class: "hover:underline" %>
      <%= link_to t(".sentence_new"), new_sentence_path, class: "hover:underline" %>
      <%= link_to t(".vocabulary_new"), new_vocabulary_path, class: "hover:underline" %>
      <%= link_to t(".sentence_index"), sentences_path, class: "hover:underline" %>
      <%= link_to t(".vocabulary_index"), vocabularies_path, class: "hover:underline" %>
      <%= link_to t(".tag_edit"), tags_path, class: "hover:underline" %>
      <%= link_to t(".bookmark"), bookmarks_path, class: "hover:underline" %>
    </nav>
    <div data-controller="dropdown" class="relative">
      <button type="button" class="flex items-center justify-center w-9 h-9 rounded-full bg-gray-200"
              aria-haspopup="menu" aria-expanded="false"
              data-action="click->dropdown#toggle click@window->dropdown#outside">
        <span class="text-lg">ðŸ‘¤</span>
      </button>

      <div class="absolute right-0 mt-2 w-44 rounded-xl bg-white shadow ring-1 ring-black/5 hidden overflow-hidden"
           data-dropdown-target="menu" role="menu">
        <%= link_to t(".user_show"), user_path,
                    class: "block px-4 py-2 text-sm hover:bg-gray-50",
                    role: "menuitem" %>
        <%= button_to t(".logout"), destroy_user_session_path,
                      method: :delete,
                      form: { "data-turbo-confirm": t(".confirm_logout"), class: "m-0" },
                      class: "w-full text-left block px-4 py-2 text-sm hover:bg-gray-50",
                      role: "menuitem" %>
      </div>
    </div>
  </div>
</header>
